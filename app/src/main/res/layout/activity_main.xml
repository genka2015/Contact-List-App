<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.contacts.MainActivity">

    <EditText
        android:id="@+id/fname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="16dp" />

    <TextView
        android:id="@+id/fnametext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/fname"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textSize="20dp"
        android:text="First Name"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/lname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/fname"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/lname"
        app:layout_constraintTop_toBottomOf="@+id/fnametext"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:textSize="20dp"
        android:text="Last Name"
        android:textAlignment="center" />

    <Button
        android:id="@+id/picBt"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lname"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:text="Take a Picture!"/>

    <Button
        android:id="@+id/saveBt"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picBt"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:text="Save Contact"/>

    <Button
        android:id="@+id/listBt"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveBt"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:text="Display Contacts"/>

    <ImageView
        android:id="@+id/my_img"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/listBt"/>

</android.support.constraint.ConstraintLayout>
